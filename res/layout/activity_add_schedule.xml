<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueeee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" 
        android:background="@color/bluee">

        <ImageButton
            android:id="@+id/ret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/newSche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="新的行程"
            android:textColor="@color/whitee"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitEnd"
            android:src="@drawable/submit"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/white"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!--
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/title"
         android:layout_below="@id/white"
         android:text="内容"
         android:textSize="16dp" />
     
     <EditText 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/inputTitle"
         android:layout_below="@id/white"
         android:layout_alignBottom="@id/title"
         android:layout_toRightOf="@id/title" />
    -->

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/inputTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!--
         <EditText
	         android:id="@+id/inputPlace"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_alignLeft="@id/inputTitle"
	         android:layout_below="@id/straight" />
	     
	     <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:id="@+id/place"
	         android:text="地点"
	         android:textSize="16dp"
	         android:layout_toLeftOf="@id/inputPlace"
	         android:layout_alignBottom="@id/inputPlace"
	         android:layout_below="@id/straight" />
        -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/inputPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="16dp" />

    <TimePicker
        android:id="@+id/timePiker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提醒"
        android:textSize="16dp" />
    
    

 	<weatherforecast.view.SwitchButton  
        android:id="@+id/wiperSwitch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
 	
</LinearLayout>