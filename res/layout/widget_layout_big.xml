<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="@drawable/bgw1"
    android:orientation="vertical"
    android:padding="8dp" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal" 
        >
        
        <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:orientation="vertical" 
          >

            <TextView
                android:id="@+id/bigwidgetTextviewtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="15:18"
                android:textColor="@color/whitee"
                android:textSize="60sp" />
            
            <TextView
                android:id="@+id/bigwidgetTextviewdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月24日  周三"
                android:textColor="@color/whitee"
                android:textSize="20sp" />

            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            >
            
            <ImageView
                android:id="@+id/imageView_bigwidget"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/location" />    

            <TextView
                android:id="@+id/bigwidgetTextviewlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="海淀区"
                android:textColor="@color/whitee"
                android:textSize="20sp" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/bigwidgetTextviewschedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="您有两个日程"
                android:textColor="@color/whitee"
                android:textSize="20sp" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewwidgetbigtoday"
                android:layout_width="146dp"
                android:layout_height="85dp"
                android:scaleType="fitCenter"
                android:src="@drawable/d100" />
            
           <LinearLayout 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" 
           android:gravity="right"      
           >
            
           <TextView
               android:id="@+id/bigwidgetTextviewtempNow"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="30 "
               android:textColor="@color/whitee"
               android:textSize="25sp" />

           <TextView
               android:id="@+id/bigwidgetTextviewtempdes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="多云"
               android:textColor="@color/whitee"
               android:textSize="18sp" />

            </LinearLayout>

           <TextView
               android:id="@+id/bigwidgetTextviewtemp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:text="30-20"
               android:textColor="@color/whitee"
               android:textSize="15sp" />
            
        </LinearLayout>
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" 
        >
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" 
        >

          <ImageView
              android:id="@+id/imageViewwidgetbigtomorrow"
              android:layout_width="48dp"
              android:layout_height="match_parent"
              android:src="@drawable/d100" />
  
           <LinearLayout 
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center_vertical"
           android:orientation="vertical" 
           >

             <TextView
                 android:id="@+id/bigwidgetTextviewtomorrow"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="明日"
                 android:textColor="@color/whitee" />
          
             <TextView
                 android:id="@+id/bigwidgetTextviewtomorrowtemp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="30-20"
                 android:textColor="@color/whitee" />

           </LinearLayout>
        
         </LinearLayout>
         <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="horizontal" 
         >
            
           <ImageView
           android:id="@+id/imageViewwidgetbigtomorrow2"
           android:layout_width="48dp"
           android:layout_height="match_parent"
           android:src="@drawable/d100" />  
           <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center_vertical"
           android:layout_weight="1"
           android:orientation="vertical" 
           >

             <TextView
                 android:id="@+id/bigwidgetTextviewtomorrow2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="明日"
                 android:textColor="@color/whitee" />
          
             <TextView
                 android:id="@+id/bigwidgetTextviewtomorrowtemp2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="30-20"
                 android:textColor="@color/whitee" />

           </LinearLayout> 
        </LinearLayout>
        
         
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" 
        >
            <ImageView
           android:id="@+id/imageViewwidgetbigtomorrow3"
           android:layout_width="48dp"
           android:layout_height="match_parent"
           android:src="@drawable/d100"  />  
           <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical" 
           android:gravity="center_vertical"
           android:layout_weight="1"
           >

             <TextView
                 android:id="@+id/bigwidgetTextviewtomorrow3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="明日"
                 android:textColor="@color/whitee" />
          
             <TextView
                 android:id="@+id/bigwidgetTextviewtomorrowtemp3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="30-20"
                 android:textColor="@color/whitee" />

           </LinearLayout>  
        </LinearLayout>
        
    </LinearLayout>
    
    
 
</LinearLayout>
